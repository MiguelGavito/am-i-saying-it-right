{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Iniciar backend (UTF-8)",
      "type": "shell",
      "command": "powershell",
      "args": [
        "-NoProfile", "-ExecutionPolicy", "Bypass", "-File", "backend/scripts/run_utf8_server.ps1"
      ],
      "group": "build",
      "presentation": {
        "reveal": "always"
      }
    },
    {
      "label": "Test backend (UTF-8)",
      "type": "shell",
      "command": "powershell",
      "args": [
        "-NoProfile", "-ExecutionPolicy", "Bypass", "-File", "backend/scripts/run_utf8_tests.ps1"
      ],
      "group": "test",
      "presentation": {
        "reveal": "always"
      }
    },
    {
        "label": "Activar venv",
        "type": "shell",
        "command": "powershell",
        "args": [
          "-NoProfile", "-ExecutionPolicy", "Bypass", "-Command", "backend\\.venv\\Scripts\\Activate.ps1"
        ],
        "presentation": {
          "reveal": "always"
        }
    },
    {
        "label": "Iniciar backend (dev)",
        "type": "shell",
        "command": "powershell",
        "args": [
            "-NoProfile", "-ExecutionPolicy", "Bypass", "-Command", "backend\\.venv\\Scripts\\python.exe -m uvicorn app.main:app --reload"
        ],
        "presentation": {
            "reveal": "always"
        }
    }
  ]
}
